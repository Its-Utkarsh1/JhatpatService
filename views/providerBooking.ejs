<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Service Requests</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        body {
            font-family: "Poppins", sans-serif;
            background: #f4f6fc;
            margin: 0;
            padding-bottom: 80px;
        }

        /* Header */
        .header {
            background: #fff;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 14px 16px;
            font-size: 1.2rem;
            font-weight: 600;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
            position: sticky;
            top: 0;
            z-index: 50;
        }

        .header i {
            font-size: 1.4rem;
            cursor: pointer;
        }

        /* Booking Card */
        .booking-card {
            background: #fff;
            margin: 16px;
            padding: 16px;
            border-radius: 16px;
            box-shadow: 0px 3px 12px rgba(0, 0, 0, 0.08);
        }

        .top-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .customer-name {
            font-size: 1.1rem;
            font-weight: 600;
            margin: 0;
        }

        .price {
            font-size: 1.1rem;
            font-weight: 700;
            color: #14213d;
        }

        .service-name {
            font-size: 1rem;
            margin-top: 6px;
            font-weight: 500;
        }

        .date-time {
            font-size: 0.85rem;
            color: gray;
            margin-top: 2px;
        }

        .status {
            padding: 5px 14px;
            border-radius: 8px;
            font-size: 0.75rem;
            font-weight: 600;
            margin-top: 8px;
            display: inline-block;
        }

        .requested {
            background: #fff7db;
            color: #d97706;
        }

        .accepted {
            background: #e0f2fe;
            color: #0369a1;
        }

        .completed {
            background: #dcfce7;
            color: #15803d;
        }

        .cancelled {
            background: #ffe4e6;
            color: #e11d48;
        }

        .btn-row {
            margin-top: 12px;
            display: flex;
            gap: 10px;
        }

        .btn {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            font-size: 0.9rem;
        }

        .accept-btn {
            background: #14213d;
            color: white;
        }

        .reject-btn {
            background: #f87171;
            color: white;
        }

        .complete-btn {
            background: #16a34a;
            color: white;
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #fff;
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid #ddd;
            padding: 10px 0;
            z-index: 100;
        }

        .bottom-nav div {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 0.8rem;
            color: gray;
            cursor: pointer;
        }

        .bottom-nav .active {
            color: #fcbf49;
        }

        .bottom-nav i {
            font-size: 1.3rem;
            margin-bottom: 5px;
        }

        /* Tabs */
        .tabs-wrapper {
            position: sticky;
            top: 60px;
            z-index: 40;
            background: #f4f6fc;
            padding: 10px 0;
        }

        .tabs {
            display: flex;
            overflow-x: auto;
            gap: 10px;
            padding: 0 12px;
        }

        .tabs::-webkit-scrollbar {
            display: none;
        }

        .tab {
            padding: 8px 16px;
            border-radius: 20px;
            background: #e5e7eb;
            font-size: 0.85rem;
            white-space: nowrap;
            cursor: pointer;
            transition: 0.2s;
        }

        .tab.active {
            background: #fcbf49;
            color: white;
        }
    </style>
</head>

<body>

    <!-- HEADER -->
    <div class="header">
        <i class="bi bi-arrow-left" onclick="history.back()"></i>
        My Service Requests
    </div>

    <!-- Tabs -->
    <div class="tabs-wrapper">
        <div class="tabs">
            <div class="tab " onclick="filterBookings('all', event)">All</div>
            <div class="tab active" onclick="filterBookings('requested', event)">Requested</div>
            <div class="tab " onclick="filterBookings('accepted', event)">Accepted</div>
            <div class="tab" onclick="filterBookings('ongoing', event)">Ongoing</div>
            <div class="tab" onclick="filterBookings('completed', event)">Completed</div>
            <div class="tab" onclick="filterBookings('cancelled', event)">Cancelled</div>
        </div>
    </div>

    <% if (!bookings || bookings.length===0) { %>
        <p style="text-align:center; margin-top:20px; color:gray;">No bookings available.</p>
        <% } %>

            <% bookings.forEach(b=> { %>

                <div class="booking-card" data-status="<%= b.status %>">

                    <div class="top-row">
                        <p class="customer-name">
                            <%= b.userId?.name %>
                        </p>
                        <p class="price">₹<%= b.price %>
                        </p>
                    </div>

                    <p class="service-name">
                        <%= b.serviceId?.name %>
                    </p>
                    <p class="date-time">
                        <%= b.date %> — <%= b.time %>
                    </p>

                    <span class="status <%= b.status %>">
                        <%= b.status.toUpperCase() %>
                    </span>

                    <!-- ACTION BUTTONS -->
                    <div class="btn-row">

                        <% if (b.status==="requested" ) { %>

                            <form action="/provider/booking/accept/<%= b._id %>" method="POST">
                                <button class="btn accept-btn">Accept</button>
                            </form>

                            <form action="/provider/booking/reject/<%= b._id %>" method="POST">
                                <button class="btn reject-btn">Reject</button>
                            </form>

                            <% } else if (b.status==="accepted" ) { %>

                                <form action="/provider/booking/start/<%= b._id %>" method="POST">
                                    <button class="btn accept-btn">Start Work</button>
                                </form>

                                <% } else if (b.status==="ongoing" ) { %>

                                    <form action="/provider/booking/complete/<%= b._id %>" method="POST">
                                        <button class="btn complete-btn">Mark Complete</button>
                                    </form>

                                    <% } %>

                    </div>

                </div>

                <% }) %>

                    <!-- Bottom Navigation -->
                    <div class="bottom-nav">
                        <div onclick="window.location.href='/page/home'" style="cursor: pointer;">
                            <i class="bi bi-house"></i>
                            <span>Home</span>
                        </div>
                        <div onclick="window.location.href='/page/categories'" style="cursor: pointer;">
                            <i class="bi bi-grid"></i>
                            <span>Categories</span>
                        </div>

                        <% if (user && user.role==="provider" ) { %>
                            <div onclick="window.location.href='/provider/request'" style="cursor: pointer;">
                                <i class="bi bi-briefcase active"></i>
                                <span>Requests</span>
                            </div>
                            <% } else { %>
                                <div onclick="window.location.href='/page/booking'" style="cursor: pointer;">
                                    <i class="bi bi-clipboard active"></i>
                                    <span>Bookings</span>
                                </div>
                                <% } %>

                                    <div onclick="window.location.href='/page/profile'" style="cursor: pointer;">
                                        <i class="bi bi-person"></i>
                                        <span>Profile</span>
                                    </div>
                    </div>

                    <!-- FILTER SCRIPT -->
                    <script>
                        function filterBookings(status, e) {
                            document.querySelectorAll(".tab").forEach(t => t.classList.remove("active"));
                            e.target.classList.add("active");

                            document.querySelectorAll(".booking-card").forEach(card => {
                                const cardStatus = card.dataset.status;

                                if (status === "all") {
                                    card.style.display = "block";
                                } else {
                                    card.style.display = (cardStatus === status) ? "block" : "none";
                                }
                            });
                        }
                    </script>
                    <!-- DEFAULT FILTER -->
                    <script>
                        window.onload = function () {
                            const defaultTab = document.querySelector(".tab.active");
                            filterBookings('requested', { target: defaultTab });
                        };
                    </script>

</body>

</html>