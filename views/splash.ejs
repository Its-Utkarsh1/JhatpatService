<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Jhatpat | Splash</title>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    html,
    body {
      width: 100%;
      height: 100%;
      background-color: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
    }

    /* Wrapper */
    .splash-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      opacity: 0;
      animation: fadeIn 1.4s ease-in-out forwards;
    }

    /* Logo */
    .splash-logo {
      width: 250px;
      /* perfect for mobile */
      height: auto;
      object-fit: contain;
      animation: scaleUp 1.2s ease-in-out;
    }

    /* Fade-in animation */
    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }

    /* Fade-out animation */
    @keyframes fadeOut {
      to {
        opacity: 0;
        transform: scale(0.93);
      }
    }

    /* Scale animation */
    @keyframes scaleUp {
      from {
        transform: scale(0.85);
        opacity: 0.7;
      }

      to {
        transform: scale(1);
        opacity: 1;
      }
    }

    .fade-out {
      animation: fadeOut 0.8s ease-in-out forwards;
    }
  </style>
</head>

<body>

  <!-- Splash Container -->
  <div class="splash-container" id="splash">
    <img src="/assets/logo.png" class="splash-logo" alt="Jhatpat Logo" />
  </div>

  <script>
  setTimeout(() => {
    const splash = document.getElementById("splash");
    splash.classList.add("fade-out");

    setTimeout(() => {

      const user = <%- JSON.stringify(user) %>;
      const isLoggedIn = user ? true : false;

      if (isLoggedIn) {
        window.location.href = "/page/home";
      } else {
        window.location.href = "/page/login";
      }

    }, );

  }, 1800);
</script>


</body>

</html>