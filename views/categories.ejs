<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>All Categories | Jhatpat</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }

    body {
      background: #fff;
      color: #000;
      padding-bottom: 80px;
      overflow-x: hidden;
    }

    /* Header */
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 16px;
      position: sticky;
      top: 0;
      background: #fff;
      z-index: 10;
      box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    }

    .header h1 {
      font-size: 1.2rem;
      font-weight: 600;
      color: #000;
    }

    .header-icons {
      display: flex;
      gap: 15px;
      font-size: 1.3rem;
      color: #000;
      cursor: pointer;
    }

    /* Search Bar */
    .search-bar {
      display: none;
      align-items: center;
      background: #f5f5f5;
      border-radius: 10px;
      margin: 10px 16px;
      padding: 10px 15px;
      gap: 10px;
      animation: fadeIn 0.3s ease;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .search-bar i {
      font-size: 1.2rem;
      color: gray;
    }

    .search-bar input {
      border: none;
      outline: none;
      background: transparent;
      width: 100%;
      font-size: 1rem;
    }

    /* Categories Container */
    .categories-container {
      display: flex;
      flex-direction: column;
      gap: 15px;
      padding: 20px 16px;
    }

    /* Single Category Card */
    .category-item {
      display: flex;
      align-items: center;
      gap: 15px;
      background: #f8f9fa;
      border-radius: 15px;
      padding: 15px;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .category-item:hover {
      background: #f1f1f1;
      transform: scale(1.01);
    }

    .category-icon {
      width: 45px;
      height: 45px;
      border-radius: 50%;
      background: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.4rem;
      color: #000;
      border: 1px solid #eee;
    }

    .category-item p {
      font-size: 1rem;
      font-weight: 500;
      color: #000;
    }

    /* Bottom Navigation */
    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      width: 100%;
      background: #fff;
      display: flex;
      justify-content: space-around;
      align-items: center;
      border-top: 1px solid #ddd;
      padding: 10px 0;
      z-index: 100;
    }

    .bottom-nav div {
      display: flex;
      flex-direction: column;
      align-items: center;
      font-size: 0.8rem;
      color: gray;
    }

    .bottom-nav .active {
      color: #fcbf49;
    }

    .bottom-nav i {
      font-size: 1.3rem;
      margin-bottom: 5px;
    }

    a {
      text-decoration: none;
      color: inherit;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <div class="header">
    <h1>All Categories</h1>
    <div class="header-icons">
      <i class="bi bi-search" id="searchBtn"></i>
    </div>
  </div>

  <!-- Search Bar (hidden initially) -->
  <div class="search-bar" id="searchBar">
    <i class="bi bi-search"></i>
    <input type="text" id="searchInput" placeholder="Search categories..." />
  </div>

  <!-- Category List -->
  <div class="categories-container">
    <a href="/page/cleaning">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-brush"></i></div>
        <p>Cleaning</p>
      </div>
    </a>

    <a href="/page/repairing">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-briefcase"></i></div>
        <p>Repairing</p>
      </div>
    </a>

    <a href="/page/painting">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-paint-bucket"></i></div>
        <p>Painting</p>
      </div>
    </a>

    <a href="/page/laundry">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-basket"></i></div>
        <p>Laundry</p>
      </div>
    </a>

    <a href="/page/appliances">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-hammer"></i></div>
        <p>Appliance</p>
      </div>
    </a>

    <a href="/page/plumbing">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-tools"></i></div>
        <p>Plumbing</p>
      </div>
    </a>

    <a href="/page/shifting">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-truck"></i></div>
        <p>Shifting</p>
      </div>
    </a>

    <a href="/page/beauty">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-droplet-half"></i></div>
        <p>Beauty</p>
      </div>
    </a>
    <a href="/page/massage">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-tv"></i></div>
        <p>Massage</p>
      </div>
    </a>


    <a href="/page/vehicle">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-car-front"></i></div>
        <p>Vehicle</p>
      </div>
    </a>

    <a href="/page/electronics">
      <div class="category-item">
        <div class="category-icon"><i class="bi bi-tv"></i></div>
        <p>Electronics</p>
      </div>
    </a>

  </div>

  <!-- Bottom Navigation -->
  <div class="bottom-nav">
    <div onclick="window.location.href='/page/home'" style="cursor: pointer;">
      <i class="bi bi-house"></i>
      <span>Home</span>
    </div>
    <div class="active">
      <i class="bi bi-grid"></i>
      <span>Categories</span>
    </div>
    <% if (user && user.role==="provider" ) { %>

      <div onclick="window.location.href='/provider/request'" style="cursor: pointer;">
        <i class="bi bi-briefcase"></i>
        <span>Requests</span>
      </div>

      <% } else { %>

        <div onclick="window.location.href='/page/booking'" style="cursor: pointer;">
          <i class="bi bi-clipboard"></i>
          <span>Bookings</span>
        </div>

        <% } %>
          <div onclick="window.location.href='/page/profile'" style="cursor: pointer;">
            <i class="bi bi-person"></i>
            <span>Profile</span>
          </div>
  </div>

  <!-- Script -->
  <script>
    const searchBtn = document.getElementById("searchBtn");
    const searchBar = document.getElementById("searchBar");
    const searchInput = document.getElementById("searchInput");
    const categories = document.querySelectorAll(".category-item");

    // Toggle search bar visibility
    searchBtn.addEventListener("click", () => {
      searchBar.style.display =
        searchBar.style.display === "flex" ? "none" : "flex";
      searchInput.focus();
    });

    // Filter categories
    searchInput.addEventListener("keyup", () => {
      const filter = searchInput.value.toLowerCase().trim();

      categories.forEach(category => {
        const text = category.textContent.toLowerCase();
        category.style.display = text.includes(filter) ? "flex" : "none";
      });
    });
  </script>
</body>

</html>