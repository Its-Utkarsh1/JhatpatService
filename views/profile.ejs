<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Profile | Jhatpat</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        body {
            background: #fff;
            color: #000;
            overflow-x: hidden;
            padding-bottom: 80px;
        }

        /* Header */
        .header {
            padding: 20px 16px 10px 16px;
            font-size: 1.4rem;
            font-weight: 600;
        }

        /* Profile Image & Name */
        .profile-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-top: 10px;
            text-align: center;
        }

        .profile-section img {
            width: 90px;
            height: 90px;
            border-radius: 100%;
            object-fit: cover;
            border: 2px solid #14213d;
        }

        .profile-section h2 {
            margin-top: 10px;
            font-size: 1.1rem;
            font-weight: 600;
        }

        /* Profile Menu List */
        .menu-list {
            margin-top: 20px;
            padding: 0 16px;
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        .menu-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 14px 10px;
            border-bottom: 1px solid #eee;
            cursor: pointer;
            transition: 0.2s;
        }

        .menu-item:hover {
            background: #f8f8f8;
        }

        .menu-left {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .menu-left i {
            font-size: 1.2rem;
            color: #14213d;
        }

        .menu-left span {
            font-size: 1rem;
            color: #000;
            font-weight: 400;
        }

        .menu-item i.bi-chevron-right {
            font-size: 1rem;
            color: #aaa;
        }

        /* Logout */
        .logout {
            color: #e63946;
            font-weight: 500;
        }

        .logout i {
            color: #e63946;
        }

        /* Bottom Navigation */
        .bottom-nav {
            position: fixed;
            bottom: 0;
            left: 0;
            width: 100%;
            background: #fff;
            display: flex;
            justify-content: space-around;
            align-items: center;
            border-top: 1px solid #ddd;
            padding: 10px 0;
            z-index: 100;
        }

        .bottom-nav div {
            display: flex;
            flex-direction: column;
            align-items: center;
            font-size: 0.8rem;
            color: gray;
            cursor: pointer;
        }

        .bottom-nav .active {
            color: #fcbf49;
        }

        .bottom-nav i {
            font-size: 1.3rem;
            margin-bottom: 5px;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <div class="header">My Profile</div>

    <!-- Profile Info -->
    <div class="profile-section">
        <img src="/user/profilePic/<%= user._id %>" alt="User Profile"
            style="border-radius: 50%; width: 110px; height:110px;" />
        <h2>
            <%= user.name %>
        </h2>
    </div>
    <!-- Profile Menu -->
    <div class="menu-list">
        <div class="menu-item" onclick="window.location.href='/page/editProfile'">
            <div class="menu-left">
                <i class="bi bi-pencil-square"></i>
                <span>Edit Profile</span>
            </div>
            <i class="bi bi-chevron-right"></i>
        </div>

        <div class="menu-item" onclick="window.location.href='/page/forgetPassword'">
            <div class="menu-left">
                <i class="bi bi-lock"></i>
                <span>Forget Password ?</span>
            </div>
            <i class="bi bi-chevron-right"></i>
        </div>

        <div class="menu-item" onclick="window.location.href='/page/booking'">
            <div class="menu-left">
                <i class="bi bi-clipboard"></i>
                <span>My Bookings</span>
            </div>
            <i class="bi bi-chevron-right"></i>
        </div>

        <div class="menu-item" onclick="window.location.href='/page/privacyPolicy'">
            <div class="menu-left">
                <i class="bi bi-clipboard"></i>
                <span>Privacy Policy</span>
            </div>
            <i class="bi bi-chevron-right"></i>
        </div>

        <div class="menu-item" onclick="window.location.href='/page/termsConditions'">
            <div class="menu-left">
                <i class="bi bi-file-earmark-text"></i>
                <span>Terms & Conditions</span>
            </div>
            <i class="bi bi-chevron-right"></i>
        </div>

        <div class="menu-item logout" onclick="window.location.href='/user/logout'">
            <div class="menu-left">
                <i class="bi bi-box-arrow-right"></i>
                <span>Logout</span>
            </div>
        </div>

    </div>

    <!-- Bottom Navigation -->
    <div class="bottom-nav">
        <div onclick="window.location.href='/page/home'" style="cursor: pointer;">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </div>
        <div onclick="window.location.href='/page/categories'" style="cursor: pointer;">
            <i class="bi bi-grid"></i>
            <span>Categories</span>
        </div>
         <% if (user && user.role==="provider" ) { %>

            <div onclick="window.location.href='/provider/request'" style="cursor: pointer;">
                <i class="bi bi-briefcase"></i>
                <span>Requests</span>
            </div>

            <% } else { %>

                <div onclick="window.location.href='/page/booking'" style="cursor: pointer;">
                    <i class="bi bi-clipboard"></i>
                    <span>Bookings</span>
                </div>

                <% } %>
        <div class="active">
            <i class="bi bi-person"></i>
            <span>Profile</span>
        </div>
    </div>
</body>

</html>