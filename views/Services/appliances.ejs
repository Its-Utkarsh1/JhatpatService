<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Appliances Services | Jhatpat</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: #f8f9fa;
      padding-bottom: 80px;
    }

    /* HEADER */
    .header {
      position: sticky;
      top: 0;
      background: #fff;
      padding: 12px 18px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
    }

    .header h3 {
      margin: 0;
      font-size: 1.2rem;
    }

    .admin-btn {
      background: #14213d;
      color: white;
      padding: 6px 12px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
    }

    /* SERVICE LIST GRID */
    #serviceList {
      padding: 16px;
      display: grid;
      gap: 20px;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    }

    /* === SERVICE CARD === */
    .service-card {
      background: white;
      border-radius: 16px;
      box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.08);
      overflow: hidden;
      transition: 0.3s ease;
      display: flex;
      flex-direction: column;
      height: 340px;
    }

    .service-card img {
      width: 100%;
      height: 160px;
      object-fit: cover;
    }

    .service-content {
      padding: 14px;
      display: flex;
      flex-direction: column;
      flex: 1;
    }

    .service-title {
      font-size: 1.05rem;
      font-weight: 600;
      margin-bottom: 5px;
      height: 42px;
      overflow: hidden;
    }

    .price-row {
      display: flex;
      align-items: center;
      gap: 7px;
    }

    .price {
      font-size: 1rem;
      font-weight: 700;
      color: #14213d;
    }

    .strike {
      font-size: 0.85rem;
      color: gray;
      text-decoration: line-through;
    }

    .bottom-row {
      margin-top: auto;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .provider-left {
      display: flex;
      flex-direction: column;
    }

    .provider-name {
      margin-bottom: 0px;
      font-size: 0.9rem;
      font-weight: 600;
    }

    .provider-label {
      font-size: 0.75rem;
      color: gray;
      margin-top: -2px;
    }

    .add-btn {
      background: #14213d;
      color: white;
      padding: 6px 14px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
      font-size: 0.9rem;
    }

    /* MODAL */
    .overlay {
      position: fixed;
      inset: 0;
      display: none;
      justify-content: center;
      align-items: center;
      background: rgba(0, 0, 0, 0.45);
      backdrop-filter: blur(3px);
      z-index: 1000;
    }

    .modal {
      background: white;
      padding: 20px;
      width: 100%;
      max-width: 400px;
      border-radius: 14px;
      box-shadow: 0px 4px 25px rgba(0, 0, 0, 0.15);
    }

    .modal input,
    .modal select {
      width: 100%;
      padding: 10px;
      margin-bottom: 12px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    .modal-btns {
      display: flex;
      justify-content: end;
      gap: 8px;
    }

    .save-btn {
      background: #14213d;
      color: white;
      padding: 8px 14px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
    }

    .cancel-btn {
      background: #ccc;
      padding: 8px 14px;
      border-radius: 8px;
      border: none;
      cursor: pointer;
    }

    /* SEARCH BAR */
    .search-container {
      margin: 12px 16px;
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .search-container input {
      flex: 1;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 8px;
    }

    .search-container button {
      background: #14213d;
      border: none;
      padding: 10px 14px;
      border-radius: 8px;
      cursor: pointer;
      color: white;
    }
  </style>
</head>

<body>

  <!-- HEADER -->
  <div class="header">
    <i class="bi bi-arrow-left" onclick="history.back()" style="font-size:1.4rem"></i>
    <h3>Appliances Services</h3>
    <% if (user && user.role==="provider" ) { %>
      <button class="admin-btn" onclick="document.getElementById('modal').style.display='flex'">+ Add</button>
      <% } %>
  </div>

  <!-- SEARCH -->
  <div class="search-container">
    <input type="text" id="searchInput" placeholder="Search appliances..." />
    <button id="searchBtn"><i class="bi bi-search"></i></button>
  </div>

  <!-- SERVICE LIST -->
  <div id="serviceList">

    <% if (!services || services.length===0) { %>
      <p style="text-align:center;color:gray;width:100%">No services added yet.</p>
      <% } %>

        <% services.forEach(svc=> { %>

          <div class="service-card">

            <div onclick="window.location.href='/service/details/<%= svc._id %>'">
              <img src="/service/image/<%= svc._id %>" />
            </div>

            <div class="service-content">

              <h3 class="service-title" onclick="window.location.href='/service/details/<%= svc._id %>'"
                style="cursor:pointer;">
                <%= svc.name %>
              </h3>

              <div class="price-row">
                <span class="price">₹<%= svc.price %></span>
                <% if (svc.mrp) { %>
                  <span class="strike">₹<%= svc.mrp %></span>
                  <% } %>
              </div>

              <div class="bottom-row">
                <div class="provider-left">
                  <p class="provider-name">
                    <%= svc.providerName %>
                  </p>
                  <p class="provider-label">Service Provider</p>
                </div>

                <% if (user && user.role==="user" ) { %>
                  <form action="/booking/create" method="POST">
                    <input type="hidden" name="serviceId" value="<%= svc._id %>">
                    <input type="hidden" name="date" value="<%= new Date().toISOString().split('T')[0] %>">
                    <input type="hidden" name="time" value="ASAP">
                    <button class="add-btn">Add</button>
                  </form>
                  <% } %>
                    <!-- If USER is provider -->
                    <% if (user && user.role==="provider" ) { %>
                      <form action="/service/delete/<%= svc._id %>" method="POST"
                        onsubmit="return confirm('Are you sure you want to delete this service?')">
                        <button class="add-btn" style="background:#d9534f;">Delete</button>
                      </form>
                      <% } %>
              </div>
            </div>
          </div>

          <% }) %>
  </div>

  <!-- ADD SERVICE MODAL -->
  <div class="overlay" id="modal">
    <form method="POST" action="/service/create" enctype="multipart/form-data" class="modal">
      <h3 style="text-align:center">Add Appliance Service</h3>

      <label>Service Name</label>
      <select name="name" required>
        <option value="">Select Appliance Service</option>
        <option value="AC Service">AC Service</option>
        <option value="AC Repair">AC Repair</option>
        <option value="Fridge Repair">Fridge Repair</option>
        <option value="Washing Machine Repair">Washing Machine Repair</option>
        <option value="Microwave Repair">Microwave Repair</option>
        <option value="TV Repair">TV Repair</option>
        <option value="RO Service">RO Service</option>
        <option value="Geyser Repair">Geyser Repair</option>
        <option value="Cooler Repair">Cooler Repair</option>
      </select>

      <input type="hidden" name="mainCategory" value="appliances" />

      <label>Original Price</label>
      <input type="number" name="price" required />

      <label>Discounted Price</label>
      <input type="number" name="mrp" />

      <label>Service Image</label>
      <input type="file" name="image" accept="image/*" required />

      <div class="modal-btns">
        <button type="button" class="cancel-btn"
          onclick="document.getElementById('modal').style.display='none'">Cancel</button>
        <button type="submit" class="save-btn">Save</button>
      </div>
    </form>
  </div>

  <script>
    document.getElementById("searchBtn").addEventListener("click", () => {
      const q = document.getElementById("searchInput").value.toLowerCase();
      document.querySelectorAll(".service-card").forEach(card => {
        const name = card.querySelector(".service-title").innerText.toLowerCase();
        const provider = card.querySelector(".provider-name").innerText.toLowerCase();
        card.style.display = (name.includes(q) || provider.includes(q)) ? "block" : "none";
      });
    });
  </script>

</body>

</html>